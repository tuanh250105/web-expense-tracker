<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.expensemanager.model.User</class>
        <class>com.expensemanager.model.PasswordResetToken</class>
        <class>com.expensemanager.model.FAQ</class>
        <class>com.expensemanager.model.ScheduledTransaction</class>
        <class>com.expensemanager.model.Account</class>
        <class>com.expensemanager.model.Category</class>
        <class>com.expensemanager.model.Transaction</class>
        <class>com.expensemanager.model.RewardPrize</class>
        <class>com.expensemanager.model.RewardPoints</class>
        <class>com.expensemanager.model.RewardSpin</class>
        <class>com.expensemanager.model.Debt</class>
        <class>com.expensemanager.model.CategoryStats</class>
        <class>com.expensemanager.model.TopTransaction</class>
        <class>com.expensemanager.model.Group</class>
        <class>com.expensemanager.model.GroupExpense</class>
        <class>com.expensemanager.model.GroupMember</class>
        <class>com.expensemanager.model.Event</class>
        <!-- Thêm các entity khác nếu có -->
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="${DB_URL}"/>
            <property name="jakarta.persistence.jdbc.user" value="${DB_USER}"/>
            <property name="jakarta.persistence.jdbc.password" value="${DB_PASS}"/>

            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>


        </properties>
    </persistence-unit>
</persistence>
