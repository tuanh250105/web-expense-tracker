<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.0"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd">

    <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- ====== MODEL CLASSES (MERGED) ====== -->
        <class>com.expensemanager.model.Account</class>
        <class>com.expensemanager.model.User</class>
        <class>com.expensemanager.model.Category</class>
        <class>com.expensemanager.model.Transaction</class>
        <class>com.expensemanager.model.Budget</class>
        <class>com.expensemanager.model.RewardPrize</class>
        <class>com.expensemanager.model.RewardPoints</class>
        <class>com.expensemanager.model.RewardSpin</class>
        <class>com.expensemanager.model.CategoryStats</class>
        <class>com.expensemanager.model.TopTransaction</class>
        <class>com.expensemanager.model.TopDebt</class>
        <class>com.expensemanager.model.PasswordResetToken</class>
        <class>com.expensemanager.model.FAQ</class>
        <class>com.expensemanager.model.ScheduledTransaction</class>

        <!-- ====== DB CONFIG ====== -->
        <properties>
            <!-- Cấu hình JDBC đọc từ ENV -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="${DB_URL}"/>
            <property name="jakarta.persistence.jdbc.user" value="${DB_USER}"/>
            <property name="jakarta.persistence.jdbc.password" value="${DB_PASS}"/>

            <!-- Hibernate Core -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.jdbc.time_zone" value="UTC"/>

            <!-- Connection Pool -->
            <property name="hibernate.connection.pool_size" value="5"/>
            <property name="hibernate.connection.autocommit" value="false"/>
            <property name="hibernate.connection.release_mode" value="after_transaction"/>
            <property name="hibernate.connection.provider_disables_autocommit" value="true"/>
            <property name="hibernate.connection.isolation" value="2"/>

            <!-- Debug & Performance -->
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.bytecode.use_reflection_optimizer" value="false"/>

            <!-- Session Context -->
            <property name="hibernate.connection.provider_class"
                      value="org.hibernate.engine.jdbc.connections.internal.DriverManagerConnectionProviderImpl"/>
            <property name="hibernate.current_session_context_class" value="thread"/>

            <!-- Hikari pool (limit connections for Supabase shared env) -->
            <property name="hibernate.hikari.minimumIdle" value="1"/>
            <property name="hibernate.hikari.maximumPoolSize" value="2"/>
            <property name="hibernate.hikari.idleTimeout" value="30000"/>
            <property name="hibernate.hikari.connectionTimeout" value="20000"/>
            <property name="hibernate.hikari.maxLifetime" value="1800000"/>
        </properties>
    </persistence-unit>
</persistence>
