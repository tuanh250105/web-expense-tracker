<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.0" 
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="expensePU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Liệt kê TẤT CẢ entity để fix association error -->
        <class>com.expensemanager.model.Account</class>
        <class>com.expensemanager.model.Category</class>
        <class>com.expensemanager.model.Transaction</class>
        <class>com.expensemanager.model.User</class>
        <class>com.expensemanager.model.PasswordResetToken</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="${DB_URL}"/>
            <property name="jakarta.persistence.jdbc.user" value="${DB_USER}"/>
            <property name="jakarta.persistence.jdbc.password" value="${DB_PASS}"/>

            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Pool config cho Supabase (giới hạn để tránh overload pooler) -->
            <property name="hibernate.connection.pool_size" value="5"/>
            <property name="hibernate.connection.autocommit" value="false"/>
            <property name="hibernate.connection.release_mode" value="after_transaction"/>
        </properties>
    </persistence-unit>
</persistence>